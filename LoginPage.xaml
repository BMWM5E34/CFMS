<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFMS.LoginPage">
    <StackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Image Source="box.png"
               HeightRequest="185"
               Aspect="AspectFit"/>

        <Label Text="Let`s get started"
               FontSize="30"
               HorizontalOptions="Center"
               Margin="0,0,0,20"/>

        <StackLayout Orientation="Vertical" HorizontalOptions="Fill" Margin="0,20,0,0">
            <Button Text="Create a new wallet" 
                    Clicked="OnCreateWalletClicked" 
                    Margin="0,0,0,10"
                    FontSize="16"
                    BackgroundColor="#8965EB"
                    TextColor="White"
                    WidthRequest="300"/>

            <Button Text="Import an existing wallet"
                    Clicked="OnImportWalletClicked"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    BorderWidth="1"
                    TextColor="White"
                    FontSize="16"
                    WidthRequest="300"/>
        </StackLayout>
    </StackLayout>
</ContentPage>