<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFMS.SendPage">
    
    <VerticalStackLayout Padding="20">
        <Entry x:Name="AddressEntry" Placeholder="Bitcoin Address" Margin="0,0,0,20" />
        <Entry x:Name="AmountEntry" Placeholder="Amount" Margin="0,0,0,20" />
        <Label x:Name="FeeLabel" Text="Transaction Fee: " Margin="0,0,0,20" />
        <Button Text="Send Bitcoin" Clicked="OnSendBTCClicked" />
    </VerticalStackLayout>
</ContentPage>
