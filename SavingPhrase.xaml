<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFMS.SavingPhrase">
    
    <VerticalStackLayout Padding="20" VerticalOptions="CenterAndExpand">
        <Label x:Name="MnemonicLabel"
               Text="Your Mnemonic Phrase will appear here"
               HorizontalOptions="Center"
               FontSize="20"/>

        <Label Text="Please make sure to save this phrase in a secure place!"
               HorizontalOptions="Center"
               TextColor="#EB658D"
               Margin="20"/>

        <Button Text="Continue"
                Clicked="ContinueButton_Clicked"
                WidthRequest="300"/>
    </VerticalStackLayout>
</ContentPage>
