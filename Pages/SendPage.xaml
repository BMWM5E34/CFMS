<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFMS.SendPage"
             BackgroundColor="#1E2327">

    <VerticalStackLayout Padding="20" VerticalOptions="Center" WidthRequest="500">

        <Button Text="â–¼" TextColor="#fff" BackgroundColor="Transparent" Grid.Row="0" />
        <Image Source="btc.png" HeightRequest="80" WidthRequest="80" Margin="0,0,0,50"/>


        <Entry x:Name="AddressEntry" Placeholder="Bitcoin Address" Margin="0,0,0,20" TextChanged="OnEntryChanged" />
        <Entry x:Name="AmountEntry" Placeholder="Amount" Margin="0,0,0,20" TextChanged="OnEntryChanged" Keyboard="Numeric" />
        <Picker x:Name="NetworkPicker" Title="Select Network" Margin="0,0,0,20">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>TestNet</x:String>
                    <x:String>Bitcoin</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Entry x:Name="FeeEntry" Placeholder="Shipping fee ( SATOSHI )" Margin="0,0,0,20" TextChanged="OnEntryChanged" Keyboard="Numeric" />


        <Button x:Name="SendBitcoinButton" BackgroundColor="#F7931A" Text="Send Bitcoin" Clicked="OnSendBTCClicked" TextColor="#fff"/>
    </VerticalStackLayout>
</ContentPage>
